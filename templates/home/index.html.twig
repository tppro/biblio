{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ userName }}!</h1>

    <nav>
        <ul>
            <li><a href="{{ path('app_home') }}">{% trans %}Accueil{% endtrans %}</a></li>
            <li><a href="{{ path('app_book_index') }}">{% trans %}Livres{% endtrans %}</a></li>
            <li><a href="{{ path('app_author_index') }}">{% trans %}Auteurs{% endtrans %}</a></li>
            <li><a href="{{ path('app_user_index') }}">{% trans %}Utilisateurs{% endtrans %}</a></li>
            <li><a href="{{ path('app_register') }}">{% trans %}S'enregistrer{% endtrans %}</a></li>
            <li><a href="{{ path('app_login') }}">{% trans %}Login{% endtrans %}</a></li>
            <li><a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a></li>
        </ul>
    </nav>
</div>
{% endblock %}
